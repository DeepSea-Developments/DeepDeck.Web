{
    "name": "esp-frontend",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "build-arduino": "ng build --prod --output-hashing none && npm run compress-artifacts && npm run move-artifacts",
        "compress-artifacts": "gzip-all \"dist/esp-frontend/*.{css,js}\" && rimraf dist/esp-frontend/*.js && rimraf dist/esp-frontend/*.css",
        "move-artifacts": "move .\\dist\\esp-frontend\\*.* .\\..\\..\\platformio\\epd-server\\data\\www",
        "bundle-analyze": "ng build --prod --stats-json --output-hashing none && webpack-bundle-analyzer dist/esp-frontend/stats.json",
        "serve-artifacts": "lite-server --baseDir=\"dist/esp-frontend\""
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^10.1.3",
        "@angular/cdk": "^10.1.3",
        "@angular/common": "~10.0.9",
        "@angular/compiler": "~10.0.9",
        "@angular/core": "~10.0.9",
        "@angular/forms": "~10.0.9",
        "@angular/material": "^10.2.0",
        "@angular/platform-browser": "~10.0.9",
        "@angular/platform-browser-dynamic": "~10.0.9",
        "@angular/router": "~10.0.9",
        "@fortawesome/angular-fontawesome": "^0.7.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.30",
        "@fortawesome/free-solid-svg-icons": "^5.14.0",
        "angular-animations": "^0.11.0",
        "bootstrap": "^4.6.0",
        "install": "^0.13.0",
        "moment": "^2.29.0",
        "ng-material-multilevel-menu": "^5.5.3",
        "ng2-date-picker": "^10.0.0",
        "ng2-daterangepicker": "^3.0.1",
        "ngx-moment": "^5.0.0",
        "ngx-socket-io": "^3.2.0",
        "npm": "^6.14.8",
        "rxjs": "~6.5.5",
        "tslib": "^2.0.0",
        "zone.js": "~0.10.3"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.1000.6",
        "@angular/cli": "~10.0.6",
        "@angular/compiler-cli": "~10.0.9",
        "@types/jasmine": "~3.5.0",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "^12.11.1",
        "codelyzer": "^6.0.0",
        "gzip-all": "^1.0.0",
        "jasmine-core": "~3.5.0",
        "jasmine-spec-reporter": "~5.0.0",
        "karma": "~5.0.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.2",
        "karma-jasmine": "~3.3.0",
        "karma-jasmine-html-reporter": "^1.5.0",
        "protractor": "~7.0.0",
        "ts-node": "~8.3.0",
        "tslint": "~6.1.0",
        "typescript": "~3.9.5"
    }
}
