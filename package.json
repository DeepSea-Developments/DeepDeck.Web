{
  "build": {
    "productName": "DeepDeck",
    "appId": "com.deepdeck.ahuyama",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility"
    }
  },
  "name": "DeepDeck",
  "version": "0.5.3",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "build-prod": "ng build --configuration production --output-hashing none",
    "build-deepdeck": "npm run build-prod && npm run compress-artifacts && npm run move-artifacts",
    "compress-artifacts": "gzip-all \"dist/esp-frontend/*.{css,js}\" && rimraf dist/esp-frontend/*.js && rimraf dist/esp-frontend/*.css",
    "move-artifacts": "move .\\dist\\esp-frontend\\*.* .\\..\\DeepDeck.Ahuyama.fw\\spiffs_image",
    "bundle-analyze": "ng build --prod --stats-json --output-hashing none && webpack-bundle-analyzer dist/esp-frontend/stats.json",
    "serve-artifacts": "lite-server --baseDir=\"dist/esp-frontend\"",
    "electron": "ng build && electron .",
    "dist": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.9",
    "@angular/cdk": "^14.2.7",
    "@angular/common": "^15.2.9",
    "@angular/compiler": "^15.2.9",
    "@angular/compiler-cli": "^15.2.9",
    "@angular/core": "^15.2.9",
    "@angular/forms": "^15.2.9",
    "@angular/material": "^14.2.7",
    "@angular/platform-browser": "^15.2.9",
    "@angular/platform-browser-dynamic": "^15.2.9",
    "@angular/router": "^15.2.9",
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "angular-animations": "^0.11.0",
    "bootstrap": "^4.6.0",
    "install": "^0.13.0",
    "moment": "^2.29.0",
    "ng-material-multilevel-menu": "^5.5.3",
    "ng2-date-picker": "^10.0.0",
    "ngx-moment": "^5.0.0",
    "npm": "^6.14.8",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "uuid": "^9.0.0",
    "zone.js": "~0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.8",
    "@angular/cli": "^15.2.8",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^1.0.5",
    "codelyzer": "^6.0.0",
    "electron": "^24.2.0",
    "electron-builder": "^23.6.0",
    "gzip-all": "^1.0.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.4.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.9.5"
  }
}
